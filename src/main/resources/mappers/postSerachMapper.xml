<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.blog.mapper.PostSearchMapper">

    <select id="findAllByPostSearchRequest" resultMap="PostWithFilesResultMap">
        SELECT 
            p.id AS post_id,
            p.user_id,
            p.category_id,
            p.name,
            p.contents,
            p.is_admin,
            p.views,
            p.create_time,
            p.update_time,
            f.id as file_id,
            f.name AS file_name,
            f.path AS file_path,
            f.extension AS file_extension,
            f.create_time as file_create_time
        FROM posts p
        LEFT JOIN files f ON p.id = f.post_id
        WHERE 1=1
        <if test="name != null and name != ''">
            AND p.name ILIKE '%' || #{name} || '%'
        </if>
        <if test="contents != null and contents != ''">
            AND p.contents ILIKE '%' || #{contents} || '%'
        </if>
        <if test=" categoryId != 0">
            AND p.category_id = #{categoryId}
        </if>

        <choose>
            <when test="sortStatus != null and sortStatus.toString() == 'NEWEST'">
                ORDER BY p.create_time DESC
            </when>
            <when test="sortStatus != null and sortStatus.toString() == 'OLDEST'">
                ORDER BY p.create_time ASC
            </when>
            <when test="sortStatus != null and sortStatus.toString() == 'CATEGORIES'">
                ORDER BY p.category_id
            </when>
        </choose>
    </select>

    <resultMap id="PostWithFilesResultMap" type="com.example.blog.dto.PostDTO">
        <id property="id" column="post_id"/>
        <result property="userId" column="user_id"/>
        <result property="categoryId" column="category_id"/>
        <result property="name" column="name"/>
        <result property="contents" column="contents"/>
        <result property="isAdmin" column="is_admin"/>
        <result property="views" column="views"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>

        <collection property="files" ofType="com.example.blog.dto.FileDTO">
            <id property="id" column="file_id"/>
            <result property="name" column="file_name"/>
            <result property="path" column="file_path"/>
            <result property="extension" column="file_extension"/>
            <result property="createTime" column="file_create_time"/>
            <result property="postId" column="post_id"/>
        </collection>
    </resultMap>

</mapper>
