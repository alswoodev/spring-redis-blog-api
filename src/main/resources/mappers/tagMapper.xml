<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.blog.mapper.TagMapper">

    <insert id="insertTag" parameterType="com.example.blog.dto.TagDTO"
                            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO tags (name)
        VALUES (#{name})
    </insert>

    <select id="findByPostId" resultType="com.example.blog.dto.TagDTO">
        SELECT t.id,
               t.name,
               t.create_time
        FROM tags t
        JOIN post_tag pt ON t.id = pt.tag_id
        WHERE pt.post_id = #{postId}
    </select>

    <select id="findByName" resultType="com.example.blog.dto.TagDTO">
        SELECT id,
               name,
               create_time
        FROM tags
        WHERE name = #{name}
    </select>

    <delete id="deleteTag">
        DELETE FROM tags
        WHERE id = #{id}
    </delete>

    <insert id="insertPostTag" parameterType="com.example.blog.dto.TagDTO">
        INSERT INTO post_tag (post_id, tag_id)
        VALUES (#{postId}, #{id})
    </insert>

</mapper>